<style>
  .banner-image {
    padding-top: 75px;
    padding-bottom: 10px;
    text-align: center;
    color: #f8f8f8;
    background:
      url(https://www.digitalmenta.com/wp-content/uploads/2019/04/potenciar-campanas-shopping.jpg) no-repeat center;
    background-size: cover;
  }

  .banner-content {
    position:
      relative;
    padding-top: 6%;
    padding-bottom: 6%;
    margin-top: 12%;
    margin-bottom:
      12%;
    background-color: rgba(0, 0, 0, 0.7);
    max-width: 660px;
    overflow: hidden;
  }

  .angled-gradient-button {
    background-size: 220%;
    box-shadow: 0 .2em .3em rgba(0, 0, 0, 0.15);
    color: white;
    background-color: black;
    background-position: 100%;
    border: 3px solid black;
    text-transform: uppercase;
    padding: 8px 16px;
    border-radius: 3px;
    transition: all .2s ease-out;
    font-weight: 900;
    cursor: pointer;
    letter-spacing: 2px;
    background-image:
      linear-gradient(110deg, black 0%, black 50%, transparent 50%, transparent 100%);
    font-size: 14px;
  }

  .angled-gradient-button:hover {
    transform:
      translateY(-2px);
    box-shadow: 0 0 .3em rgba(0, 0, 0, 0.25);
    background-color:
      yellow;
    background-position: 0;
    color: #fff;
  }

  .angled-gradient-button:active {
    transform: translateY(-1px);
  }

  .full-width {
    width: 99.4vw;
    position:
      relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
</style>
<section id="displaywarr">
    <table class="table table-striped mt-5">
        <thead class="thead-dark">
            <tr>
                <th>Warranty Id</th>
                <th>Warranty Name</th>
                <th>Products</th>
                <th>Duration</th>
                <th>Resolution</th>
                <th>Type</th>
                <th>Extendable Duration</th>
                <th>Extension Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each warr}}
            <tr>
                <td>{{_id}}</td>
                <td>{{name}}</td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="productsDropdown"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Products
                        </a>
                        <div class="dropdown-menu" aria-labelledby="productsDropdown">
                            {{#each productIds}}
                            <a class="dropdown-item" href="/product/display">{{name}}</a>
                            {{else}}
                            <h6>No products</h6>
                            {{/each}}
                        </div>
                    </div>
                </td>
                <td>{{duration.year}} years, {{duration.month}} months</td>
                <td>{{resolution}}</td>
                <td>{{type}}</td>
                <td>{{extendDur.year}} years, {{extendDur.month}} months</td>
                <td>{{extendPrice}}</td>
                <td><a href="/{{_id}}/edit" class="btn btn-lg angled-gradient-button">Edit</a></td>
            </tr>
            {{else}}
            <h1 style="text-align: center; color: black">No Warranties registered</h1>
            {{/each}}
        </tbody>
    </table>
</section>