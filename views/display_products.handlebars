<style>
  .banner-image {
    padding-top: 75px;
    padding-bottom: 10px;
    text-align: center;
    color: #f8f8f8;
    background:
      url(https://www.digitalmenta.com/wp-content/uploads/2019/04/potenciar-campanas-shopping.jpg) no-repeat center;
    background-size: cover;
  }

  .banner-content {
    position:
      relative;
    padding-top: 6%;
    padding-bottom: 6%;
    margin-top: 12%;
    margin-bottom:
      12%;
    background-color: rgba(0, 0, 0, 0.7);
    max-width: 660px;
    overflow: hidden;
  }

  .angled-gradient-button {
    background-size: 220%;
    box-shadow: 0 .2em .3em rgba(0, 0, 0, 0.15);
    color: white;
    background-color: black;
    background-position: 100%;
    border: 3px solid black;
    text-transform: uppercase;
    padding: 8px 16px;
    border-radius: 3px;
    transition: all .2s ease-out;
    font-weight: 900;
    cursor: pointer;
    letter-spacing: 2px;
    background-image:
      linear-gradient(110deg, black 0%, black 50%, transparent 50%, transparent 100%);
    font-size: 14px;
  }

  .angled-gradient-button:hover {
    transform:
      translateY(-2px);
    box-shadow: 0 0 .3em rgba(0, 0, 0, 0.25);
    background-color:
      yellow;
    background-position: 0;
    color: #fff;
  }

  .angled-gradient-button:active {
    transform: translateY(-1px);
  }

  .full-width {
    width: 99.4vw;
    position:
      relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
</style>
<table class="table table-striped mt-5">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Description</th>
            <th>Image</th>
            <th>Warranty</th>
            <th></th>
        </tr>
    </thead>

    {{#each products}}
    <tbody>
        <tr>
            <td> {{name}} </td>
            <td> {{price}} </td>
            <td> {{category}} </td>
            <td> {{quantity}} </td>
            <td> {{description}} </td>
            <td> <img src="{{image}}" id="product-img"
                    width="200px" height="200px" alt="..."></td>
            {{#if noWarranty}}
            <td>No</td>
            {{else}}
            <td>Yes</td>
            {{/if}}
            <td><a href="/product/{{_id}}/edit" class="btn btn-lg angled-gradient-button">Edit</a></td>
            {{!-- <td>
                <form action="/product/{{_id}}?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger mt-4">Remove</button>
                </form>
            </td> --}}
            {{!-- <td>
                <div class="mx-3 pb-3">
                    <a href="/product/{{_id}}/edit" class="btn btn-primary mr-1">Edit</a>
                    <form action="/product/{{_id}}?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger">Remove</button>
                    </form>
                </div>
            </td> --}}
        </tr>
        {{else}}
        <h1 style="text-align: center; color: black">No Products registered</h1>
    </tbody>
    {{/each}}
</table>